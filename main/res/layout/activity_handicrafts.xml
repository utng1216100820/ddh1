<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_padding"
    android:id="@+id/container"
    android:background="@drawable/background"
    tools:context="mx.com.dloza.descendent.HandicraftsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_dolores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/dolores"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textSize="@dimen/size_12"
            android:textColor="@color/orange"
            />

        <Button
            android:id="@+id/btn_handicrafts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/crafts"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textSize="@dimen/size_12"
            android:textColor="@color/orange"
            />

        <Button
            android:id="@+id/btn_handicrafts_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/ny_handicrafts"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textSize="@dimen/size_15"
            android:textColor="@color/orange"
            />
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_margin="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>


</LinearLayout>
