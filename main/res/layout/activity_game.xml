<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_16"
    android:background="@drawable/backfour"
    tools:context="mx.com.dloza.descendent.GameActivity">

    <include
        layout="@layout/images"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_300"
        android:id="@+id/include" />

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/include"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/size_32"
        android:textColor="@color/green_two"
        android:layout_alignStart="@+id/include"
        android:layout_marginTop="@dimen/size_16"
        android:text="@string/p1_0" />

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_p1"
        android:textSize="@dimen/size_32"
        android:textColor="@color/green_one"
        android:layout_alignEnd="@+id/include"
        android:layout_alignRight="@+id/include"
        android:text="@string/p2_0" />
</RelativeLayout>